{
  "name": "{{name}}",
  "version": "1.0.0",
  "description": "{{description}}",
  "author": "Robert H. Hameetman (https://www.robhameetman.com/)",
  "homepage": "https://{{subdomain}}.{{hostname}}",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{org}}/{{repo}}"
  },
  "bugs": {
    "url": "https://github.com/{{org}}/{{repo}}/issues"
  },
  "engines": {
    "node": ">=18.5.0",
    "npm": ">=9.5.0"
  },
  "scripts": {
    "build": "rm -rf ./dist/ && NODE_ENV=production webpack --config=./config/webpack.config.js --mode=production --node-env=production",
    "e2e": "npm stop && (npm run prod&) && cypress run -C test/e2e/cypress.config.js && npm stop",
    "format": "NODE_ENV=production eslint ./src --config ./config/eslint.config.js --ext=ts,tsx --fix && stylelint src --fix --cache",
    "prod": "NODE_ENV=production webpack serve --config=./config/webpack.config.js --node-env=production --no-open",
    "postinstall": "husky install",
    "reset": "rm -rf node_modules/ && npm cache clear --force && [[ -f package-lock.json ]] && npm ci || npm i",
    "setup": "sh scripts/setup.sh",
    "start": "NODE_ENV=development node --conditions=react-server ./node_modules/.bin/webpack serve --config=./config/webpack.config.js --node-env=development",
    "stop": "lsof -t -i tcp:8080 | xargs kill",
    "test": "NODE_ENV=test jest --maxWorkers=50%"
  },
  "dependencies": {},
  "devDependencies": {},
  "browserslist": [
    "defaults"
  ],
  "eslint": {
    "extends": "@rob.hameetman",
		"plugins": [
			"import"
		],
    "ignores": [
      "tailwind.config.js",
      "config/webpack.config.js",
      "typings/"
    ],
    "rules": {
      "sort-keys": "off",
      "sort-imports": "off",
      "import/extensions": "off",
      "import/no-cycle": "off",
      "import/no-unresolved": "off"
    },
    "overrides": [
      {
        "files": [
          "**/test/**",
          "**/__test__/**",
          "*.spec.ts?(x)"
        ],
				"plugins": [
					"@typescript-eslint",
					"import"
				],
        "rules": {
          "no-proto": "off",
          "@typescript-eslint/no-empty-function": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "endOfLine": "auto"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "ignoreFiles": [
      "dist/**/*.css",
      "coverage/**/*.css",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.spec.*",
      "**/*.snap.*",
      "**/*.jpg",
      "**/*.png",
      "**/*.md"
    ],
    "rules": {
      "indentation": "tab",
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ],
      "font-family-no-missing-generic-family-keyword": null,
      "no-descending-specificity": null,
      "no-invalid-position-at-import-rule": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": [
      "text-summary"
    ],
    "globals": {
      "__DEBUG__": false,
      "__DEV__": false,
      "__EVENTS__": [],
      "__PROD__": false,
      "__TEST__": true
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "css",
      "scss",
      "gql",
      "graphql"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/resources/$1",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "preset": "ts-jest",
    "reporters": [
      "default"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest/config/setupTests.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.spec.{ts,tsx}"
    ],
    "transform": {
      "\\.ts?(x)$": "ts-jest",
      "\\.(gql|graphql)$": "@graphql-tools/jest-transform",
      "\\.(css|scss)$": "<rootDir>/test/jest/config/styleTransform.ts",
      "^(?!.*\\.(ts|tsx|css|json|cjs)$)": "ts-jest"
    },
    "transformIgnorePatterns": [
      "^.+\\.module\\.(css|sass|scss)$",
      "node_modules/@adobe/css-tools"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "tailwindcss/nesting": {},
      "tailwindcss": {},
      "postcss-custom-media": {},
      "autoprefixer": {},
      "postcss-preset-env": {
        "nesting-rules": false
      }
    }
  }
}
